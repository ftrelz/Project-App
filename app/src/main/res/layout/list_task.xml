<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Project Title"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/list_task_title"
        tools:text="Project Description"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_task_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_task_description"
        tools:text="Project Date"
        android:padding="4dp"/>

</RelativeLayout>